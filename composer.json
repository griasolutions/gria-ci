{
	"name": "griasolutions/gria-ci",
	"minimum-stability": "dev",
	"repositories": [
		{
			"url": "https://github.com/griasolutions/gria-lib.git",
			"type": "git"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"griasolutions/gria-lib": "@dev",
		"knplabs/github-api": "@dev",
		"austinhyde/iniparser": "@dev",
		"squizlabs/php_codesniffer": "1.*",
		"phpmd/phpmd": "1.4.*",
		"phpunit/phpunit": ">=3.7",
		"phpunit/phpunit-selenium": ">=1.2",
		"mikey179/vfsStream": "*",
		"icanboogie/inflector": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"GriaCi\\": "src/library/",
			"Application\\Controller\\": "src/application/controllers/",
			"Application\\Helper\\": "src/application/helpers/",
			"Application\\Model\\": "src/application/models/",
			"ApplicationTest\\": "tests/php/"
		}
	}
}